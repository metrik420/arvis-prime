# Jarvis HUD - Raspberry Pi Configuration
# Optimized settings for ARM64 and resource constraints

# ================================
# Pi-Specific Settings
# ================================
PI_OPTIMIZED=true
ARM64_BUILD=true
LIGHTWEIGHT_MODE=true

# ================================
# Core Server Configuration
# ================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=http://raspberrypi.local

# ================================
# Performance Tuning for Pi
# ================================
NODE_OPTIONS=--max-old-space-size=512
ENABLE_GPU_MONITORING=false
SYSTEM_METRICS_INTERVAL=10000
CPU_ALERT_THRESHOLD=85
MEMORY_ALERT_THRESHOLD=90
DISK_ALERT_THRESHOLD=95

# ================================
# Security Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PIN_SALT=your-unique-pin-salt-for-hashing
SESSION_SECRET=your-session-secret-key

# ================================
# Home Assistant Integration
# ================================
HA_URL=http://homeassistant.local:8123
HA_TOKEN=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.your-home-assistant-token
HA_TIMEOUT=15000

# ================================
# Docker Integration
# ================================
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_API_VERSION=1.41

# ================================
# Voice Processing (Lightweight)
# ================================
VOICE_MODEL_PATH=./models
USE_LIGHTWEIGHT_MODELS=true
TTS_ENGINE=piper
TTS_VOICE=en_GB-jenny_dioco-medium
OPENAI_API_KEY=sk-fallback-key-for-cloud-processing

# ================================
# Database Configuration
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
SQLITE_PATH=./data/jarvis.db
DATABASE_URL=sqlite:./data/jarvis.db

# ================================
# Security & Notifications
# ================================
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ
TELEGRAM_CHAT_ID=-1001234567890
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook-url

# ================================
# Network Configuration
# ================================
ASUS_ROUTER_HOST=192.168.1.1
ASUS_ROUTER_USER=admin
ASUS_ROUTER_PASS=your-router-password
ROUTER_TIMEOUT=10000

# ================================
# GPIO and Hardware
# ================================
ENABLE_GPIO=true
GPIO_PIN_LED=18
GPIO_PIN_BUTTON=24
ENABLE_I2C=true
ENABLE_SPI=true

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/jarvis.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3
ENABLE_REQUEST_LOGGING=false

# ================================
# Backup Configuration
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/opt/jarvis/backup

# ================================
# Pi Hardware Monitoring
# ================================
MONITOR_CPU_TEMP=true
CPU_TEMP_THRESHOLD=70
MONITOR_THROTTLING=true
ENABLE_WATCHDOG=true

# ================================
# Network Discovery
# ================================
ENABLE_MDNS=true
HOSTNAME=jarvis-pi
ADVERTISE_SERVICES=true