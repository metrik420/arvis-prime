# Jarvis Backend Environment Configuration

# ================================
# Core Server Configuration
# ================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=http://localhost:8080

# ================================
# Security Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PIN_SALT=your-unique-pin-salt-for-hashing
SESSION_SECRET=your-session-secret-key

# ================================
# Home Assistant Integration
# ================================
HA_URL=http://homeassistant.local:8123
HA_TOKEN=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.your-home-assistant-token
HA_TIMEOUT=10000

# ================================
# Docker Integration
# ================================
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_API_VERSION=1.41

# ================================
# Nginx Proxy Manager
# ================================
NPM_URL=http://npm.local:81
NPM_TOKEN=your-npm-api-token
NPM_EMAIL=admin@example.com

# ================================
# Plex Media Server
# ================================
PLEX_URL=http://plex.local:32400
PLEX_TOKEN=your-plex-token
PLEX_CLIENT_IDENTIFIER=jarvis-backend

# ================================
# Security & Notifications
# ================================
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ
TELEGRAM_CHAT_ID=-1001234567890
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook-url

# ================================
# Voice Processing
# ================================
VOICE_MODEL_PATH=./models
OPENAI_API_KEY=sk-your-openai-key-for-fallback
ELEVENLABS_API_KEY=your-elevenlabs-api-key
VOICE_MODEL=eleven_multilingual_v2
VOICE_ID=9BWtsMINqrJLrRacOk9x

# ================================
# Database Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
SQLITE_PATH=./data/jarvis.db
DATABASE_URL=sqlite:./data/jarvis.db

# ================================
# Router/Network Management
# ================================
ASUS_ROUTER_HOST=192.168.1.1
ASUS_ROUTER_USER=admin
ASUS_ROUTER_PASS=your-router-admin-password
ASUS_ROUTER_PORT=80

# ================================
# WireGuard VPN
# ================================
WG_CONFIG_PATH=/etc/wireguard
WG_INTERFACE=wg0

# ================================
# System Monitoring
# ================================
ENABLE_GPU_MONITORING=true
SYSTEM_METRICS_INTERVAL=5000
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/jarvis.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ================================
# Wake-on-LAN Configuration
# ================================
WOL_TARGET_MAC=AA:BB:CC:DD:EE:FF
WOL_TARGET_IP=192.168.1.100
WOL_BROADCAST=192.168.1.255

# ================================
# Backup Configuration
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# Development/Debug
# ================================
DEBUG=jarvis:*
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true